@model MolinaTextilSystem.Models.CustomerOrderModel

@{
    ViewData["Title"] = "Crear Orden de Cliente";
}

<h1>Nueva Orden de Cliente</h1>

<h4>CustomerOrderModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">Nombre del Cliente</label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerOrderIssue" class="control-label">Asunto de la Orden</label>
                <input asp-for="CustomerOrderIssue" class="form-control" />
                <span asp-validation-for="CustomerOrderIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerOrderDescription" class="control-label">Descripción de la Orden</label>
                <input asp-for="CustomerOrderDescription" class="form-control" />
                <span asp-validation-for="CustomerOrderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextileRecipe" class="control-label">Materiales</label>
                <input asp-for="TextileRecipe" class="form-control" />
                <span asp-validation-for="TextileRecipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label">Monto Total</label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

