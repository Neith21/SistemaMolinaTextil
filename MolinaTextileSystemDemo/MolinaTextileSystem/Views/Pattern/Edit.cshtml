@model MolinaTextileSystem.Models.PatternModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar patrón</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="PatternId" hidden class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PatternName" class="control-label"></label>
                <input asp-for="PatternName" class="form-control" />
                <span asp-validation-for="PatternName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatternDescription" class="control-label"></label>
                <input asp-for="PatternDescription" class="form-control" />
                <span asp-validation-for="PatternDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
