@model MolinaTextileSystem.Models.CategoryModel

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div style="text-align: center;">
    <h1>Eliminar Categoría</h1>
    <h3>¿Está seguro que desea eliminar?</h3>

    <div style="margin: 0 auto; width: fit-content;">
        <table style="text-align: justify; border-collapse: separate; border-spacing: 0 8px;">
            <tbody>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.CategoryId)
                    </td>
                </tr>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.CategoryName)
                    </td>
                </tr>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.CategoryDescription)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.CategoryDescription)
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <form id="deleteForm" asp-action="Delete" style="margin: 0 20px;">
                <input asp-for="CategoryId" hidden class="form-control" />                
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary">Regresar al listado</a>
            </form>
        </div>
    </div>
</div>
