@model MolinaTextileSystem.Models.CategoryModel

@{
    ViewData["Title"] = "Creación de Nueva Categoría";
}

<h1 style="text-align:center">Creación de Nueva Categoría</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label">Nombre de Categoría</label>
                    <input asp-for="CategoryName" type="text" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryDescription" class="form-label">Descripción</label>
                    <input asp-for="CategoryDescription" type="text" class="form-control" />
                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />

                    <a asp-action="Index" class="btn btn-primary">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de agregar esta categoría?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "Category")';
                return false;
            }
        }
    </script>
}
