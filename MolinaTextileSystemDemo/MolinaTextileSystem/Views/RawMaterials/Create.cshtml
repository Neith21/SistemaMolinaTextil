@model MolinaTextileSystem.Models.RawMaterialsModel

@{
    ViewData["Title"] = "Crear Registro de Material";
}

<h1 style="text-align:center">Creación de Material</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RawMaterialName" class="control-label"></label>
                    <input asp-for="RawMaterialName" class="form-control" />
                    <span asp-validation-for="RawMaterialName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RawMaterialDescription" class="control-label"></label>
                    <input asp-for="RawMaterialDescription" class="form-control" />
                    <span asp-validation-for="RawMaterialDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RawMaterialPurchasePrice" class="control-label"></label>
                    <input asp-for="RawMaterialPurchasePrice" class="form-control" />
                    <span asp-validation-for="RawMaterialPurchasePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RawMaterialQuantity" class="control-label"></label>
                    <input asp-for="RawMaterialQuantity" class="form-control" />
                    <span asp-validation-for="RawMaterialQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId"
                            asp-items="@ViewBag.Category"
                            class="form-select">
                            <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select asp-for="SupplierId"
                            asp-items="@ViewBag.Supplier"
                            class="form-select">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
