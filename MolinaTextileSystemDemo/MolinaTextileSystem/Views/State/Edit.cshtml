@model MolinaTextileSystem.Models.StateModel

@{
    ViewData["Title"] = "Edición de estado";
}

<h1 style="text-align:center">Creación de estado</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <input asp-for="StateId" type="hidden" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="StateName" class="form-label">Estado</label>
                    <input asp-for="StateName" type="text" class="form-control" />
                    <span asp-validation-for="StateName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StateDescription" class="form-label">Descripción</label>
                    <input asp-for="StateDescription" type="text" class="form-control" />
                    <span asp-validation-for="StateDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />

                    <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de editar este estado?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "State")';
                return false;
            }
        }
    </script>
}
