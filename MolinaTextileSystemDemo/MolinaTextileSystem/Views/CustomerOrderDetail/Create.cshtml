@model MolinaTextileSystem.Models.CustomerOrderDetailModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CustomerOrderDetailModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerOrderDetailQuantity" class="control-label"></label>
                <input asp-for="CustomerOrderDetailQuantity" class="form-control" />
                <span asp-validation-for="CustomerOrderDetailQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerOrderId" class="form-label">Patrón</label>
                <select asp-for="CustomerOrderId" class="form-select"> <!-- AGREGAR VIEWBAG -->
                    <option value="">Seleccione</option>
                    <option value="6">6</option>
                </select>
                <span asp-validation-for="CustomerOrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="form-label">Patrón</label>
                <select asp-for="ProductId"
                        asp-items="@ViewBag.Product"
                        class="form-select">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="CustomerOrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
