@model LoginCredentialModel
@{
    Layout = null;
    ViewData["title"] = "Inicio de Sesion";
}

@if (TempData["messageRestorePassword"] != null)
{
    <div id="messageRestorePassword" class="alert alert-primary" role="alert">
        @TempData["messageRestorePassword"]
    </div>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background-color: rgb(229, 142, 142);
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(193, 39, 45, 1), rgba( 229, 142, 142, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(193, 39, 45, 1), rgba( 229, 142, 142, 1))
    }

    .card-color {
        background-color: #672E3B;
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-100%);
        }
        to {
            transform: translateY(0);
        }
    }

    @@keyframes slideOut {
        from {
            transform: translateY(0);
        }
        to {
            transform: translateY(-100%);
        }
    }

    .alert {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 10px;
        background-color: #f8d7da;
        color: #721c24;
        text-align: center;
        animation: slideIn 0.5s forwards, slideOut 0.5s forwards 3.5s;
        display: none;
    }
}
</style>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <form asp-action="RestorePassword" asp-controller="LoginCredential" method="post" class="card card-color text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Restauracion de contraseña</h2>
                                <p class="text-white-50 mb-4">Rellene sus datos</p>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Employee.EmployeeName" class="form-control form-control-lg" placeholder="Nombre Empleado" />
                                    <span asp-validation-for="Employee.EmployeeName" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Nueva Contraseña" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5 mt-4" type="submit">Restaurar Contraseña</button>
                                <a class="btn btn-outline-light btn-lg px-4 mt-4" asp-controller="LoginCredential" asp-action="Login">Regresar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var messageElement = document.getElementById("messageRestorePassword");
            if (messageElement) {
                messageElement.style.display = 'block';
            }
        });

        setTimeout(function () {
            var messageElement = document.getElementById("messageRestorePassword");
            if (messageElement) {
                messageElement.style.animation = 'slideOut 0.2s forwards';
                setTimeout(function () {
                    messageElement.style.display = 'none';
                }, 500);
            }
        }, 4000);
    </script>

</body>

</html>