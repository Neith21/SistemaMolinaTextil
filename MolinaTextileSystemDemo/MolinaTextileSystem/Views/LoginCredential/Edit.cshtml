@model LoginCredentialModel

@{
    ViewData["Title"] = "Edición de credenciales";
}

<h1 style="text-align:center">Edición de credenciales</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <input asp-for="LoginCredentialId" type="hidden" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label">Empleado</label>
                    <input asp-for="EmployeeId" type="text" class="form-control" />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Usuario</label>
                    <input asp-for="Username" type="text" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="text" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />

                    <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de editar estas credenciales?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "LoginCredential")';
                return false;
            }
        }
    </script>
}