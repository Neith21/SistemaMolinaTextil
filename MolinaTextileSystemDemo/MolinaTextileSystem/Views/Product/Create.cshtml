@model MolinaTextileSystem.Models.ProductModel

@{
    ViewData["Title"] = "Crear Producto";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductSize" class="control-label"></label>
                    <input asp-for="ProductSize" class="form-control" />
                    <span asp-validation-for="ProductSize" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatternId" class="form-label">Patrón</label>
                    <select asp-for="PatternId"
                            asp-items="@ViewBag.Pattern"
                            class="form-select">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="PatternId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StateId" class="form-label">Estado</label>
                    <select asp-for="StateId"
                            asp-items="@ViewBag.State"
                            class="form-select">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
