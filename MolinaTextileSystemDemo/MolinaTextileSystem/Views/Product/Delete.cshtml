@model MolinaTextileSystem.Models.ProductModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div style="text-align: center;">
    <h1>Eliminar Detalle</h1>
    <h3>¿Está seguro que desea eliminar?</h3>

    <div style="margin: 0 auto; width: fit-content;">
        <table style="text-align: justify; border-collapse: separate; border-spacing: 0 8px;">
            <tbody>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.ProductId)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.ProductId)
                    </td>
                </tr>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.ProductName)
                    </td>
                </tr>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.ProductSize)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.ProductSize)
                    </td>
                </tr>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.PatternId)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.PatternId)
                    </td>
                </tr>
                <tr>
                    <th style="padding-bottom: 8px;">
                        @Html.DisplayNameFor(model => model.StateId)
                    </th>
                    <td style="padding: 0px 0px 8px 10px;">
                        @Html.DisplayFor(model => model.StateId)
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <form id="deleteForm" asp-action="Delete" style="margin: 0 20px;">
                <input asp-for="ProductId" type="hidden" class="form-control" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
            <a id="regresarLink" class="btn btn-primary">Regresar al listado</a>
        </div>
    </div>
</div>

